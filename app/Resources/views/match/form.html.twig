{% extends 'base.html.twig' %}

{% block title %}
    estest::match::form
{% endblock %}

{% block body %}
    <form method="post">
        <h4>Filter:</h4>
        {% for key,value in filters %}
            <label><input type="radio" name="filter" value="{{ key }}" {{ loop.first ? 'checked="checked"' }}/>{{ value }}</label>
        {% endfor %}
        <h4>Categories:</h4>
        {% for key,value in categories %}
            <label><input type="checkbox" name="{{  key }}" />{{ value }}</label>
        {% endfor %}
        <h4>Days:</h4>
        {% for key,value in weekdays %}
            <label><input type="checkbox" name="{{  key }}" />{{ value }}</label>
        {% endfor %}
        <input type="submit" />
    </form>
{% endblock %}

{% block stylesheets %}
<style>
    label {
        display: block;
    }
    h4 {
        margin-bottom: 2px;
    }
    input[type='submit'] {
        margin-top: 10px;
    }
</style>
{% endblock %}
